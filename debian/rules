#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	./bootstrap
	dh_auto_configure -- \
	    --with-pam \
	    --with-man=man \
	    --with-maildir=/var/mail \
	    --with-privsep-path=/var/empty \
	    --with-privsep-user=smtpd \
	    --with-queue-user=smtpq \
	    --with-filter-user=smtpf

override_dh_auto_clean:
	dh_auto_clean
	rm -f aclocal.m4 \
	      compile \
	      config.guess \
	      config.h.in \
	      config.sub \
	      configure \
	      contrib/Makefile.in \
	      contrib/libexec/Makefile.in \
	      contrib/libexec/mail.local/Makefile.in \
	      depcomp \
	      install-sh \
	      ltmain.sh \
	      m4/libtool.m4 \
	      m4/lt\~obsolete.m4 \
	      m4/ltoptions.m4 \
	      m4/ltsugar.m4 \
	      m4/ltversion.m4 \
	      missing \
	      openbsd-compat/Makefile.in \
	      regress/Makefile.in \
	      regress/bin/Makefile.in \
	      regress/bin/parse.c \
	      smtpd/Makefile.in \
	      smtpd/aliases.5.out \
	      smtpd/forward.5.out \
	      smtpd/makemap.8.out \
	      smtpd/newaliases.8.out \
	      smtpd/parse.c \
	      smtpd/smtpctl.8.out \
	      smtpd/smtpd.8.out \
	      smtpd/smtpd.conf.5.out \
	      smtpd/smtpd.conf.out \
	      ylwrap
	find . -name Makefile.in -exec rm -f {} \;
